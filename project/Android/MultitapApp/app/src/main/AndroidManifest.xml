<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bang.multitapapp" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activitysets.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activitysets.JoinActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".activitysets.MainActivity" />
        <activity android:name=".activitysets.BTActivity" />
        <activity android:name=".activitysets.WeblistActivity" />
        <activity android:name=".activitysets.MultitapActivity" />
        <activity android:name=".activitysets.AddDeviceActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".activitysets.DeviceListActivity" android:theme="@android:style/Theme.Holo.Light.Dialog"/>
        <activity android:name=".activitysets.ReservationActivity" />

    </application>

</manifest>
