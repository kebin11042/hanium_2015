<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/th_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/th_brown">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="스마트 멀티탭"
            android:textSize="18dp"
            android:textColor="@color/th_grey"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtxLoginId"
            android:singleLine="true"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="아이디"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edtxLoginPassword"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="비밀번호"
            android:textSize="14dp"/>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtvLoginLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="로그인"
            android:gravity="center"
            android:textColor="@color/th_white"
            android:background="@drawable/selector_login_login_btn"/>

        <TextView
            android:id="@+id/txtvLoginJoin"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/th_green"
            android:textSize="15dp"
            android:background="@drawable/selector_back_btn"/>

    </LinearLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </FrameLayout>

    <TextView
        android:id="@+id/txtvLoginBT"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="블루투스 제어하기"
        android:textColor="@color/th_white"
        android:background="@drawable/selector_login_bt_btn"
        android:textSize="15dp"/>

</LinearLayout>